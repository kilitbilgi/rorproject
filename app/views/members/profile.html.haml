%body.center-slider.one-column.middle-sidebar
  :css
    .form-full{
    float:left;
    width:100%;
    margin-bottom:10px;
    }
    .form-left{
    width:9%;
    float:left;
    padding-top:10px;
    }
    .form-right{
    float:right;
    width:90%!important;
    }
    input.form-right{
    padding-left:5px;
    }
    .form-continue{
    padding-left:20px!important;
    }
  =render :partial => 'general/header'
  =render :partial => 'general/slider'
  #main
    .sidebars-area
      %aside.sidebar
        .widget
          .widget-title.special-offers
            %div
              %img{:alt => "", :src => "/assets/info.png"}
              Your Profile
            .clear
          .widget-content
            %form{:action => "profileComplete", :method => "post"}
              %input{name: "authenticity_token", type: "hidden", value: session[:_csrf_token]}
              .form-full
                %label.form-left{:for => "fname"} First Name:
                %input#fname.form-right{:maxlength => "30", :name => "member[fname]", :type => "text", :value => @member.fname}
              .clear
              .form-full
                %label.form-left{:for => "lname"} Last Name:
                %input#lname.form-right{:maxlength => "30", :name => "member[lname]", :type => "text", :value => @member.lname}
              .clear
              .form-full
                %label.form-left{:for => "phone"} Cell Phone:
                %input#phone.form-right{:maxlength => "11", :name => "member[phone]", :type => "text", :value => @member.cellphone}
              .clear
              .form-full
                %label{:for => "name"} Email:
                %strong.form-right
                =@member.email
              .clear
              .form-full
                %label.form-left{:for => "password"} Password:
                %input#password.form-right{:maxlength => "40", :name => "member[password]", :type => "password"}
              .clear
              .form-full
                %label.form-left{:for => "bdate"} Birth Date:
                %input#bdate.datepicker.form-right{:maxlength => "10", :name => "bdate", :type => "text", :value => @member.birthdate.strftime("%d/%m/%Y")}
              .clear
              %input.orange_button.form-continue{:name => "submit", :type => "submit", :value => "Update"}
      .clear
    .clear
  =render :partial => 'general/footer'