=render "common"
#page-wrapper
  .row
    .col-lg-12
      %h1
        Cars
      .alert.alert-info.alert-dismissable
        %button.close{"aria-hidden" => "true", "data-dismiss" => "alert", :type => "button"} &times;
        Welcome to Cars Page
  .row
    .col-lg-12
      %h3 All Cars
      %table.table.table-bordered.table-hover.tablesorter
        %thead
          %tr
            %th ID
            %th Title
            %th Make
            %th Model
            %th Year
            %th Color
            %th Fuel
            %th Hp
            %th Price
            %th Stock
        %tbody
          -@all_cars.each do |car_obj|
            %tr{"data-toggle"=>"popover",:title=>"Car Image","data-trigger"=>"hover","data-placement"=>"top","data-html"=>true,"data-content"=>"<img width=150 height=90 src='"+car_obj.image.url(:medium)+"'/>"}
              %td
                =car_obj.id
              %td
                =car_obj.title
              %td
                =car_obj.make
              %td
                =car_obj.model
              %td
                =car_obj.year_info
              %td
                =car_obj.color
              %td
                =car_obj.fueltype
              %td
                =car_obj.hp
              %td
                =car_obj.price
              %td
                =car_obj.stock