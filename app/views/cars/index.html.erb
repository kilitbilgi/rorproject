<h1>Listing cars</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Make</th>
      <th>Model</th>
      <th>Year info</th>
      <th>Color</th>
      <th>Fueltype</th>
      <th>Hp</th>
      <th>Image</th>
      <th>Price</th>
      <th>Stock</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.title %></td>
        <td><%= car.make %></td>
        <td><%= car.model %></td>
        <td><%= car.year_info %></td>
        <td><%= car.color %></td>
        <td><%= car.fueltype %></td>
        <td><%= car.hp %></td>
        <td><%= car.image %></td>
        <td><%= car.price %></td>
        <td><%= car.stock %></td>
        <td><%= link_to 'Show', car %></td>
        <td><%= link_to 'Edit', edit_car_path(car) %></td>
        <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

